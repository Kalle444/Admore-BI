<div class="banner">
  <div class="navbar-admore-login">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= "Admore "%>
    <% end %>
  </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="login-container" >
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <h2 class="text-center">Logga in</h2>
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, label: 'Lösenord', required: false %>
              <%= f.input :remember_me, inline_label: 'Kom ihåg mig',  as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Logga in", class: "btn-warning btn-block" %>
            </div>
          <% end %>
          <div style = "margin-top: 20px">
          <%= link_to "Glömt ditt lösenord?", new_password_path(resource_name) %> </div>
        </div>
      </div>
    </div>
</div>
